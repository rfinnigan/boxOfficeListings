<%= form_for([@room, @show]) do |f| %>

<% if @show.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@show.errors.count, "error") %> prohibited this article from being saved:
    </h2>
    <ul>
      <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= f.label :artist%><br>
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :duration %> (defaults to 60mins if left blank)<br>
    <%= f.number_field :duration%>
  </p>
  <p>
    <%= f.label :nationality %><br>
    <%= f.text_field :nationality%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
