<%= form_for([@show, @performance]) do |f| %>

<% if @performance.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@performance.errors.count, "error") %> prohibited this article from being saved:
    </h2>
    <ul>
      <% @performance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= f.label :date%><br>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :time %><br>
    <%= f.time_field :time %>
  </p>
  <p>
    <%= f.label :room %><br>
    <%= f.collection_select :room_id, Room.all, :id, :full_name, prompt: true, selected: @performance.room_id %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
